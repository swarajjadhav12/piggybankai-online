# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/piggybank_ai"

# JWT Configuration
# Generate a secure random string: openssl rand -hex 64
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI - Google Gemini
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-1.5-flash"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET="your-session-secret-change-this"
